<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.geometry.Insets?>

<BorderPane id="main" prefHeight="400" prefWidth="900" stylesheets="@../css/estilo.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ifpr.pgua.eic.sistemaEscola.controllers.JanelaPrincipal">

   <padding>
         <Insets topRightBottomLeft="20"/>
   </padding>

   <center>
      
         <VBox alignment="center" spacing="10">
            <Button id="btnTexto" onAction="#carregaTelaMenuAlunos" prefWidth="200" text="Alunos">
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor>
            <effect>
               <DropShadow height="23.0" radius="10.5">
                  <color>
                     <Color opacity="0.4" />
                  </color>
               </DropShadow>
            </effect></Button>

            <Button id="btnTexto" onAction="#carregaTelaMenuProfessores" prefWidth="200" text="Professores">
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor>
            <effect>
               <DropShadow height="23.0" radius="10.5">
                  <color>
                     <Color opacity="0.4" />
                  </color>
               </DropShadow>
            </effect></Button>

            <Button id="btnTexto" onAction="#carregaTelaMenuCursos" prefWidth="200" text="Cursos" textAlignment="CENTER">
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor>
            <effect>
               <DropShadow height="23.0" radius="10.5">
                  <color>
                     <Color opacity="0.4" />
                  </color>
               </DropShadow>
            </effect></Button>
         </VBox>
      
   </center>
   
</BorderPane>
